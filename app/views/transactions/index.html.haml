# encoding: UTF-8

#nav
  %div= link_to('הכל', transactions_path(@name))
  - @sectors.each do |s|
    %div= link_to(s, transactions_sector_path(@name, s))
#data
  #stats
    .stat
      %p החודש הנוכחי:
      %span#num_stat
        = "#@this_month ₪"
    .stat
      %p החודש הקודם:
      %span#num_stat
        = "#@prev_month ₪"
    .stat
      %p ממוצע חודשי:
      %span#num_stat
        = "#@avg_month ₪"
  .clear
  #txns
    %table
      %thead
        %tr
          %th תיאור
          %th סכום
          %th כתובת
      %tbody
        - @txns.each do |t|
          %tr
            %td= t.supplier_name
            %td= t.amount
            %td= t.address
.clear
